<div class="container">
  <!-- Heading -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">
        Re-Taurantz
        <small>Find a place to eat</small>
      </h1>
    </div>
  </div>
  <!-- /.row -->
  <div class="row">
    {{#each restaurants as |restaurant|}}
      <div class="col-md-4 portfolio-item">
        <a href="/{{restaurant.id}}">
          <img
            class="img-responsive"
            src="/images/{{place_name}}.png"
            alt="{{restaurant_name}}"
          />
        </a>
        <h3>
          <a href="/{{restaurant.id}}">{{restaurant_name}}, {{cuisine}}</a>
        </h3>
        <p>{{description}}</p>
      </div>
    {{/each}}
  </div>

</div>